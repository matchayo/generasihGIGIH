<h1>Items</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Price</th>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><a href="/items/details/<%= item.id %>">Details</a></td>
        <td><a href="/items/edit/<%= item.id %>">Edit</a></td>
        <td><a href="/items/delete/<%= item.id %>">Delete</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="/items/new">New Item</a>